<!DOCTYPE html>
<html lang="en">
	<head>
			<%- include('_head.ejs') %> 	
	</head>
	<body>
		<div class="wrapper">
			<header><i class="bx bx-left-arrow-alt"></i>Weather App</header>
			<section class="input-part">
				<p class="info-txt pending">Please enter a Valid city name</p>
				<input
					type="text"
					placeholder="Enter a City Name"
					name = "city"
					spellcheck="false"
					required
				/>
				<div class="seperator"></div>
				<button>Get Device Location</button>
			</section>
			<section class="weather-part">
				<img src="https://openweathermap.org/img/w/<%= weather.icon %>.png" alt="Weather Icon" />
				<div class="temp">
					<span class="numb"><%= weather.temperature %></span>
					<span class="deg">°</span>C
				</div>
				<div class="weather"><%= weather.description %></div>
				<div class="location">
					<i class="bx bx-map"></i>
					<span><%= weather.cityName %></span>
				</div>
				<div class="bottom-details">
					<div class="column feels">
						<i class="bx bxs-thermometer"></i>
						<div class="details">
							<div class="temp">
								<span class="numb-2"><%= weather.feelsLike %></span>
								<span class="deg">°</span>C
							</div>
							<p>Feels like</p>
						</div>
					</div>
					<div class="column humidity">
						<i class="bx bxs-droplet-half"></i>
						<div class="details">
							<span><%= weather.humidity %>%</span>
							<p>Humidity</p>
				</div>
			</section>
		</div>
	</body>
</html>
